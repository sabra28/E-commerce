{% extends 'base.html.twig' %}
{% block title %}sport Ludique{% endblock %}

{% block body %}
<!-- page du bas  -->

<div class="banner">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="caption">
          <h2>Sport Ludique</h2>
          <div class="line-dec"></div>
          <p>Tous types de <strong>Vélo</strong> vendu sur notre site .
          <br><br>Commandez en toute sécurité, VTT, BMX, Vélo Electrique pour la ville.  </p>
          <div class="main-button">
            <a href="{{ path('BMX') }}">Article</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Banner  -->
<!-- Article -->
<div class="featured-items">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="section-heading">
          <div class="line-dec"></div>
          <h1>Vélo</h1>
        </div>
      </div>
      <div class="col-md-12">
        <div class="owl-carousel owl-theme">
            {% for article in articles %}
              <div class="featured-item">
            <h2>  <a href="{{ path('article_show', {'id': article.id}) }}"> <img src="{{article.image }}"  alt="image de l'article"></a></h2>
                  <h4>{{ article.nom }}</h4>
                  <h6>{{ article.prix }} €</h6>
              </div>
            {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
<!--fin articles -->


<!-- Iconne -->
<div class="subscribe-form">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="section-heading">
          <div class="line-dec"></div>
          <h1>Pour commander </h1>
        </div>
      </div>
      <div class="col-md-8 offset-md-2">
        <div class="main-content">
          <p>Votre panier sera enregistrer, veuillez poursuivre </p>
          <div class="container">
            <form id="Connexion" action="" method="get">
              <div class="row">
                <div class="col-md-7">
                  <fieldset>
                    <input name="email" type="text" class="form-control" id="email"
                    onfocus="if(this.value == 'Your Email...') { this.value = ''; }"
                  onBlur="if(this.value == '') { this.value = 'Your Email...';}"
                  value="Your Email..." required="">
                  </fieldset>
                </div>
                <div class="col-md-5">
                  <fieldset>
                    <button type="submit" id="form-submit" class="button">Connexion</button>
                  </fieldset>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- iconne -->

{% endblock %}
